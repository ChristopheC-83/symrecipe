{% extends 'base.html.twig' %}

{% block title %}SymRecipe || Ajout Ingredient
{% endblock %}

{% block body %}

	<div class="container">

		<h1 class="my-5">Ajouter un Ingredient</h1>
		{{ form_start(form) }}

		<div class="mb-3">
			{{form_label(form.name)}}
			{{form_widget(form.name)}}
			{{form_errors(form.name)}}
		</div>
		<div class="mb-3">
			{{form_label(form.price)}}
			{{form_widget(form.price)}}
			{{form_errors(form.price)}}
		</div>
		<div class="form-group">{{form_row(form.submit)}}</div>

	
	{{ form_end(form) }}


</div>{% endblock %}
