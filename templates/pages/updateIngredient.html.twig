{% extends 'base.html.twig' %}

{% block title %}SymRecipe || Modif Ingredient
{% endblock %}

{% block body %}

	<div
		class="container">

		{% for message in app.flashes('danger') %}
			<div class="w-50 mx-auto my-3">
				<div class="alert alert-danger">
					{{ message }}
				</div>
			</div>
		{% endfor %}

		<h1 class="form-group my-5">Modifier un Ingredient</h1>
		{{ form_start(form) }}

		<div class="form-group mb-3">
			{{form_label(form.name)}}
			{{form_widget(form.name)}}
			<div class="form-error">{{form_errors(form.name)}}</div>
			<div class="form-error">{{form_help(form.name)}}</div>
		</div>
		<div class="form-group mb-3">
			{{form_label(form.price)}}
			{{form_widget(form.price)}}
			<div class="form-error">{{form_errors(form.price)}}</div>
			<div class="form-error">{{form_help(form.price)}}</div>
		</div>
		<div class="form-group">{{form_row(form.submit)}}</div>


		{{ form_end(form) }}


	</div>
{% endblock %}
